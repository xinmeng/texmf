\newglossaryentry{ipsec}
                 {
                   name={IPsec, Internet Protocol Security},
                   text={\mbox{IPsec}},
                   description={A protocol suite for securing Internet
                     Protocol (IP) communications by authenticating
                     and encrypting each IP packet of a communication
                     session. IPsec also includes protocols for
                     establishing mutual authentication between agents
                     at the beginning of the session and negotiation
                     of cryptographic keys to be used during the
                     session. \See[cite]{ipsec-arch}}
                 }

